<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tlo1"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <Button
        android:id="@+id/buttonAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:text="@string/przycisk2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="13"
        android:hint="Login"
        android:backgroundTint="@color/navyblue"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:layout_alignEnd="@+id/editText2"
        android:drawableLeft="@drawable/ic_login"
        android:drawablePadding="10dp" />


    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="13"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_password"
        android:hint="HasÅ‚o"
        android:layout_below="@+id/editText1"
        android:layout_alignParentStart="true"
        android:drawablePadding="10dp"/>

    <CheckBox 
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText2"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="6dp"
        android:text="@string/powiadomienie_zap"
        android:onClick="onCheckboxClicked"/>
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LoginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/powiadomienie_rej"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:onClick="onClick"
		android:clickable="true"
		android:textColor="@color/navyblue"
		/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="@string/powiadomienie_haslo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:clickable="true"
        android:textColor="@color/navyblue"
        />

    <Button
        android:id="@+id/ObservButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/navyblue"
        android:text="@string/obser"
        android:layout_above="@+id/buttonAlert"
        android:layout_alignEnd="@+id/buttonAlert"
        android:textColor="@color/white"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/powiadomienie_log"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/checkBox1"
        android:layout_alignParentStart="true" />

</RelativeLayout>