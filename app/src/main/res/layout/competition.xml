<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:background="@color/tlo1">



    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Data zawodów"
        android:layout_marginRight="50dp"
        android:layout_alignTop="@+id/imageView1"
        android:layout_toEndOf="@+id/imageView1"
        android:layout_marginLeft="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nazwa zawodów"
        android:layout_below="@id/TextView1"
        android:layout_alignStart="@id/TextView1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="10dp"
        android:textColor="@color/navyblue"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Miejscowość"
        android:layout_below="@id/TextView2"
        android:layout_alignStart="@id/TextView2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="10dp"/>

    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView3"
        android:layout_above="@+id/linearLayout1"
        android:fillViewport="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Typ zawodów: "
                android:layout_marginLeft="40dp"
                />

            <TextView
                android:id="@+id/TextView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/TextView4"
                android:layout_toEndOf="@id/TextView4"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/TextView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TextView4"
                android:text="Godzina rozpoczęcia: "
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/TextView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/TextView6"
                android:layout_toEndOf="@id/TextView6"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/TextView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TextView6"
                android:text="Data zakończenia: "
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/TextView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/TextView8"
                android:layout_toEndOf="@id/TextView8"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/TextView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TextView8"
                android:text="Godzina zakończenia: "
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/TextView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/TextView10"
                android:layout_toEndOf="@id/TextView10"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/TextView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TextView10"
                android:text="Limit uczestników: "
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/TextView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/TextView12"
                android:layout_toEndOf="@id/TextView12"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/TextView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TextView12"
                android:text="Opłata: "
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/TextView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/TextView14"
                android:layout_toEndOf="@id/TextView14"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/TextView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TextView14"
                android:text="Kategorie: "
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/TextView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/TextView16"
                android:layout_toEndOf="@id/TextView16"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                />

            <TextView
                android:id="@+id/TextView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TextView16"
                android:text="Opis: "
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/TextView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/TextView18"
                android:layout_toEndOf="@id/TextView18"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                />



        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:stretchColumns="*"
            android:id="@+id/tableButtons">

        </TableLayout>

    <Button
        android:id="@+id/Button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableButtons"
        android:textColor="#FFF"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <Button
        android:id="@+id/Button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Powrót"
        android:layout_below="@+id/Button1"
        android:layout_alignStart="@+id/Button1"
        android:layout_alignEnd="@+id/Button1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    </LinearLayout>
</RelativeLayout>