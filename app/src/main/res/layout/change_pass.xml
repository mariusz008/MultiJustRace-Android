<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tlo1"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:tint="@color/navyblue"/>

    <Button
        android:id="@+id/buttonAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:text="@string/przycisk2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Stare hasło"
         android:inputType="textPassword"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="140dp"
        android:layout_alignEnd="@+id/editText2" />


    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
         android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:hint="Nowe hasło"
        android:layout_below="@+id/editText1"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
         android:inputType="textPassword"
        android:hint="Powtórz nowe hasło"
        android:layout_below="@id/editText2"
        android:layout_alignParentStart="true"/>


    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navyblue"
        android:textColor="@color/white"
        android:text="@string/przycisk3"
        android:layout_above="@+id/buttonAlert"
        android:layout_alignParentStart="true" />

</RelativeLayout>